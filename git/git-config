[user]
    name = houmin
    email = weihoumin@gmail.com

[core]
    editor = vim
    excludesfile = ~/.gitignore

[credential]
    helper = cache

[alias]
    graph = log --graph --color --pretty=format:"%C(yellow)%H%C(green)%d%C(reset)%n%x20%cd%n%x20%cn%C(blue)%x20(%ce)%x20%C(cyan)[gpg:%GK%x20%G?]%C(reset)%n%x20%s%n"
    st = status
    last = log -1 --stat
    unstage = reset HEAD --
    uncommit = reset --soft HEAD~
    cached = diff --cached
    d = difftool

[color]
    ui = auto

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[hub]
    protocol = ssh

[commit]
    template = ~/.git-commit-template
    gpgsign = false

[gpg]
    program = gpg
